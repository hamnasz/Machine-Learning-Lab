{
  "name": "My Codespaces Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
  "features": {
    "python": "latest",
    "git": "latest"
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  "settings": {
    "python.pythonPath": "/usr/local/bin/python"
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}